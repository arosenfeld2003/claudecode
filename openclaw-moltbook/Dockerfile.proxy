FROM nginx:1.25-alpine

# Create non-root user
RUN addgroup -g 1000 proxy && \
    adduser -u 1000 -G proxy -s /bin/sh -D proxy

# Create directories for logs and pid
RUN mkdir -p /var/log/nginx /var/run/nginx && \
    chown -R proxy:proxy /var/log/nginx /var/run/nginx /var/cache/nginx

# Copy nginx configuration
COPY nginx/nginx.conf /etc/nginx/nginx.conf
COPY nginx/allowlist.conf /etc/nginx/allowlist.conf

# Expose proxy port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=10s --retries=3 \
    CMD wget -q --spider http://localhost:8080/health || exit 1

# Run as non-root user
USER proxy

CMD ["nginx", "-g", "daemon off;"]
